<!DOCTYPE html>
<html>
<head>
  <title>Spitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>

<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
  <div class="navbar-header">
  <a class="navbar-brand" href="<%= users_path%>">Spitter</a>
    <% if current_user != nil %>
    <div class="navbar-collapse collapse">
    <ul class= "nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %></a>
      <ul class="dropdown-menu">
        <li><a href="#">Edit</a></li>
        <li><a href="#">Delete</a></li>
        <li class="divider"></li>
        <li><a href="<%= link_to "Log Out", logout_path %>">Logout</a></li>
      </ul></li>
      </ul>
    <% else %>
      <li><a href="<%= link_to "Log In", login_path %>">Login</a></li>
      <li><a href="<%= link_to "Sign Up", signup_path %>">Signup</a></li>
    <% end %>
  </div>
</div>
</nav>

<%= flash[:notice] %>
  <%= yield %>
</div>

</body>
</html>
