<!DOCTYPE html>
<html>
<head>
  <title>Spitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>

  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <div class="navbar-brand"><%= link_to "Spits", users_path %></div>
      </div>
      <% if current_user %>

        <div class="collapse navbar-collapse">
          <li class="dropdown">
            <a href="<%= root_url %>" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="<%= logout_path %>">Logout</li>
              <li><a href="<%= user_path(current_user) %>">Profile</li>
            </ul>
          </li>

      <% else %>

          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Sign up", signup_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Login", login_path %></li>
          </ul>
        </div>

      <% end %>

    </div>
  </nav>

<%= flash[:notice] %>
  <%= yield %>
</div>

</body>
</html>
